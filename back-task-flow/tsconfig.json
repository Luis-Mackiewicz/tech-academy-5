{
  "compilerOptions": {
    "target": "es6", // Define o alvo como ES6
    "module": "commonjs", // Usa o sistema de módulos CommonJS
    "outDir": "./dist", // Diretório de saída para arquivos compilados
    "rootDir": "./src", // Diretório raiz do código-fonte
    "strict": true, // Ativa verificações estritas do TypeScript
    "esModuleInterop": true, // Permite interoperabilidade com módulos ES
    "skipLibCheck": true, // Ignora checagem de tipos em arquivos de biblioteca
    "forceConsistentCasingInFileNames": true, // Força consistência em nomes de arquivos
    "emitDecoratorMetadata": true, // Emite metadados para decoradores
    "experimentalDecorators": true, // Habilita suporte a decoradores experimentais
    "strictPropertyInitialization": false // Desativa inicialização estrita de propriedades
  },
  "include": ["src/**/*"], // Inclui todos os arquivos na pasta src
  "exclude": ["node_modules"] // Exclui a pasta node_modules
}
